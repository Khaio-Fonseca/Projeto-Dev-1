pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout do código do repositório
                script {
                    git branch: 'patch-1', url: 'https://github.com/Yamazaki-Khaio/Projeto-Dev-1.git'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                // Navegue até o diretório do backend
                dir('backend') {
                    // Instale as dependências usando npm
                    bat 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                // Navegue até o diretório do backend
                dir('backend') {
                    // Execute o build usando npm
                    bat 'npm run build'
                }
            }
        }

        // Adicione mais estágios conforme necessário, como testes, implantação, etc.
    }

    post {
        always {
            // Realize ações pós-build, se necessário
        }
    }
}
